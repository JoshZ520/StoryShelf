  },
  "host": "storyshelf.onrender.com",
  "basePath": "/",
  "schemes": [
    "https",
    "http"
  ],
  "securityDefinitions": {
    "oauth2": {
      "type": "oauth2",
      "flow": "implicit",
      "authorizationUrl": "/auth/google/start",
      "description": "Google OAuth 2.0 authentication. Users must authenticate via Google to access protected endpoints."
    }
  },
  "paths": {
