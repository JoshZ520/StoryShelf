        ],
        "description": "Create a new book. Requires Google OAuth authentication.",
        "parameters": [
          {
            "name": "book",
            "in": "body",
            "description": "Book payload",
            "required": true,
            "schema": {
              "$ref": "#/definitions/BookInput"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
